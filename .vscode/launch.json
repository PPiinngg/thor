{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Validate Plugin",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/clap-validator.exe",
      "args": [
        "-v",
        "trace",
        "validate",
        "--in-process",
        "./build/vscode-debugging-build.clap"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "integratedTerminal",
      "preLaunchTask": "Build"
    },
  ]
}
